<h1>tweets</h1>
<form action="/tweets" method="post">
  <img src="{{user.avatar}}" alt="使用者大頭照" style="width: 20rem">
  <p>使用者名字 : {{user.name}}</p>
  <div class="form-group">
    <label for="description">推文</label>
    <textarea class="form-control" id="description" rows="3" name="description" placeholder=" 我是誰"></textarea>
  </div>
  <button type="submit" class="btn">Submit</button>
</form>
<a href="/">main</a>

<div class="row row-cols-1 row-cols-md-3">
  {{#each tweets}}
  <div class="card m-3" style="width: 18rem;">
    <img src="{{this.User.cover}}" class="card-img-top" alt="...">
    <img src="{{this.avatar}}" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">推文編號:{{this.id}} </h5>
      <p class="card-text">內容:{{this.description}}</p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">推文的時間 {{this.createdAt}}</li>
      <li class="list-group-item">推文者的帳號 @{{this.User.account}}</li>
      <li class="list-group-item">推文者的名字 {{ this.User.name}}</li>
      <li class="list-group-item d-flex justify-content-around">
        <div class="left">
          <i class="far fa-comment"></i>
          <span>{{this.Replies.length}} 回覆數</span>
        </div>
        <div class="right inline-block">

        推文者{{this.UserId}} 使用者{{../userId}}
        推文ID {{this.id}}
        {{this.Likes.UserId}}
            {{#if this.Likes.isLike}}
          <form action="/tweets/{{this.id}}/unlike" method="POST">
            <button type="submit"><i class="fas fa-heart"></i></button>
            <span>{{this.Likes.length}} 喜歡數</span>
          </form>
          {{else}}
          <form action="/tweets/{{this.id}}/like" method="POST">
            <button type="submit"><i class="far fa-heart"></i></button>
            <span>{{this.Likes.length}} 喜歡數</span>
          </form>
          {{/if}}

            {{#ifCond UserId ../userId}}
            <p>不能喜歡</p>
            {{else}}
            <p>可以喜歡</p>
            {{/ifCond}}


