<h1>tweets</h1>
<form action="/tweets" method="post">
  <img src="{{current_user.avatar}}" alt="使用者大頭照" style="width: 20rem">
  <p>使用者名字 : {{current_user.name}}</p>
  <div class="form-group">
    <label for="description">推文</label>
    <textarea class="form-control" id="description" rows="3" name="description" placeholder=" 我是誰"></textarea>
  </div>
  <button type="submit" class="btn">Submit</button>
  <a href="/users/{{current_user.id}}/edit" class="btn btn-info">帳戶設定</a>
  <a href="/users/{{current_user.id}}/profile" class="btn btn-info">個人編輯</a>
</form>
<a href="/">main</a>

<div class="row row-cols-1 row-cols-md-3">111
  {{#each tweets}}
1111
  <div class="card m-3" style="width: 18rem;">
    <a href="http:/users/{{this.User.id}}">
      <img src="{{this.User.cover}}" class="card-img-top" alt="...">
    </a>
    <img src="{{this.User.avatar}}" class="card-img-top" alt="..."
      style="max-width: 80px; max-height: 80px;border-radius: 50%;">
    <a href="/users/{{this.User.id}}/tweets" class="btn btn-primary mt-2">推文作者所有推文</a>
    <div class="card-body">
      <h5 class="card-title">推文編號:{{this.id}} </h5>
      <p class="card-text">內容:{{this.description}}</p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">推文的時間 {{this.createdAt}}</li>
      <li class="list-group-item">推文者的帳號 @{{this.User.account}}</li>
      <li class="list-group-item">推文者的名字 {{ this.User.name}}</li>
      <li class="list-group-item d-flex justify-content-around">
        <div class="left">
          <i class="far fa-comment"></i>
          <span>{{this.tweetReplyCount}} 回覆數</span>
        </div>
        <div class="right ">
         {{#if isLike}}
          <!-- <form action="/tweets/{{this.id}}/like" method="POST">  -->
            <form action="/tweets/{{this.id}}/unlike" method="POST">
              <button type="submit"><i class="fas fa-heart text-danger"></i></button>
              <span>{{this.tweetLikeCount}} 喜歡數</span>
            </form>
          {{else}}
             <!-- <form action="/tweets/{{this.id}}/unlike" method="POST">  -->
              <form action="/tweets/{{this.id}}/like" method="POST">
                <button type="submit"><i class="far fa-heart text-danger"></i></button>
                <span>{{this.tweetLikeCount}} 喜歡數</span>
              </form>
             {{/if}}
        </div>
      </li>
    </ul>
    <div class="card-body">
      <a href="/users/{{this.User.id}}" class="card-link">profile</a>
      <a href="/users/{{this.User.id}}/edit" class="card-link">edit</a>
      <a href="/tweets/{{this.User.id}}" class="card-link">tweet</a>
    </div>
    <form action="/tweets/{{this.id}}/replies" method="POST">
      <div class="form-group">
        <label for="reply">回覆</label>
        <textarea class="form-control" id="reply" rows="3" name="reply" placeholder="請留言"></textarea>
      </div>
      <button type="submit" class="btn">留言</button>
    </form>
  </div>
  {{/each}}
</div>
