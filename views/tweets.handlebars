<h1>tweets</h1>
<form action="/tweets" method="post">
  <div class="form-group">
    <label for="description">Example textarea</label>
    <textarea class="form-control" id="description" rows="3" name="description" placeholder=" 我是誰"></textarea>
  </div>
  <button type="submit" class="btn">Submit</button>
</form>
<a href="/">main</a>

<div class="row row-cols-1 row-cols-md-3">
  {{#each tweets}}
  <div class="card m-3" style="width: 18rem;">
    <img src="{{this.cover}}" class="card-img-top" alt="...">
    <img src="{{this.avatar}}" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title">推文編號:{{this.id}} </h5>
      <p class="card-text">內容:{{this.description}}</p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">推文者的id {{this.UserId}}</li>
      <li class="list-group-item">推文者的名字 {{ user.name}}</li>
    </ul>
    <div class="card-body">
      <a href="/users/profile" class="card-link">profile</a>
      <a href="/users/{{this.id}}/edit" class="card-link">edit</a>
    </div>
  </div>
  {{/each}}
</div>