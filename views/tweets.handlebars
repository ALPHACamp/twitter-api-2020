        </div>
        <!-- <div class="right">
         <i class="far fa-heart"> </i>
         <span>  喜歡數</span>
       </div> -->
      </li>
    </ul>
    <div class="card-body">
      <a href="/users/{{this.id}}" class="card-link">profile</a>
      <a href="/users/{{this.id}}/edit" class="card-link">edit</a>
      <a href="/tweets/{{this.id}}" class="card-link">tweet</a>
    </div>
    <form action="/tweets/{{this.id}}/replies" method="POST">
      <div class="form-group">
        <label for="reply">回覆</label>
        <textarea class="form-control" id="reply" rows="3" name="reply" placeholder="請留言"></textarea>
      </div>
      <button type="submit" class="btn">留言</button>
    </form>
  </div>
  {{/each}}
</div>
